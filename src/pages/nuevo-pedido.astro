---
import Layout from '../layouts/Layout.astro'
import { getDB } from '../db'
import { tallasTable, estilosTable } from '../db/schema'
import OrderForm from '../components/OrderForm'

const db = getDB(Astro.locals.runtime.env)

// Obtenemos tallas y estilos directamente desde D1 para pasarlos al componente
const tallas = await db.select().from(tallasTable)
const estilos = await db.select().from(estilosTable)

// Obtenemos la llave pública del runtime de Cloudflare
const turnstileSiteKey = Astro.locals.runtime.env.PUBLIC_TURNSTILE_SITE_KEY;
---

<Layout>
  <script src="https://challenges.cloudflare.com/turnstile/v0/api.js" defer async></script>
  <main class="py-20 px-6 min-h-screen">
    <div class="max-w-5xl mx-auto">
      <div class="mb-12">
        <a
          href="/"
          class="text-gray-400 hover:text-white transition-colors flex items-center gap-2 mb-6"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-4 h-4"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Volver al inicio
        </a>
        <h1 class="text-4xl font-bold text-white mb-2">
          Personaliza tu Pedido
        </h1>
        <p class="text-gray-400">
          Completa los pasos a continuación para confirmar tu compra.
        </p>
      </div>

      <OrderForm 
        client:load 
        tallas={tallas} 
        estilos={estilos} 
        turnstileSiteKey={turnstileSiteKey}
      />
    </div>
  </main>
</Layout>
